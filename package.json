{
	"name": "nadyanay.me",
	"version": "1.0.0",
	"main": "/public/index.html",
	"author": "NN <admin@aishitei.ru>",
	"license": "MIT",
	"scripts": {
		"css": "cleancss -o ./public/assets/css/style.css ./src/assets/css/style.css",
		"html": "html-minifier --input-dir ./src --output-dir ./public --collapse-boolean-attributes --collapse-whitespace --remove-attribute-quotes --remove-redundant-attributes --sort-attributes --use-short-doctype --file-ext html",
		"sri": "gulp",
		"images": "imagemin ./src/assets/images --out-dir ./public/img -p",
		"buildall": "npm run css && npm run html && npm run sri && npm run images"
	},
	"dependencies": {
		"clean-css-cli": "^5.3.0",
		"gulp-cli": "^2.3.0"
	},
	"devDependencies": {
		"gulp": "^4.0.2",
		"gulp-sri-hash": "^2.2.1",
		"html-minifier": "^4.0.0",
		"imagemin-cli": "^6.0.0"
	}
}
